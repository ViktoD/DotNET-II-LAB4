@model Book
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete book</h1>

<form method="post" asp-action="DeletePOST">
	<input asp-for="ID" hidden />
	<div class"mb-3">
		<label>Name book</label>
		<input asp-for="Name" disabled />
	</div>
	<div class"mb-3">
		<label>Author book</label>
		<input asp-for="Author" disabled />
	</div>
	<div class"mb-3">
		<label>Price</label>
		<input asp-for="Price" disabled />
	</div>
	<div class"mb-3">
		<label>Year published</label>
		<input asp-for="YearPublished" disabled />
	</div>
	<button type="submit">Delete book</button>
	<button><a asp-controller="Book" asp-action="Index">Return to all books</a></button>

</form>